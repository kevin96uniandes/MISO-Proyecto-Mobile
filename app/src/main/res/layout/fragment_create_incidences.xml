<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_user_register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context=".ui.dashboard.fragments.CrateIncidencesFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20sp"
        android:paddingEnd="20sp">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_incidence_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:endIconTint="@color/abcall_third_one"
            android:layout_marginTop="16dp"
            android:hint="@string/select_issue_type"
            style="@style/customIncidenceInputText"
            android:clickable="true"
            app:placeholderTextAppearance="@style/customLoginHintTextAppearance"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/abcall_primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_incidence_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text|textNoSuggestions"
                style="@style/customIncidenceInputTextAppearance"
                android:focusable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:endIconTint="@color/abcall_third_one"
            android:layout_marginTop="16dp"
            android:hint="@string/subject"
            style="@style/customIncidenceInputText"
            app:placeholderTextAppearance="@style/customLoginHintTextAppearance"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/abcall_primary_color"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text|textNoSuggestions"
                style="@style/customIncidenceInputTextAppearance"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_detail"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:endIconMode="clear_text"
            android:layout_marginTop="16dp"
            app:endIconTint="@color/abcall_third_one"
            android:hint="@string/comments"
            style="@style/customIncidenceInputText"
            app:placeholderTextAppearance="@style/customLoginHintTextAppearance"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/abcall_primary_color"
            app:strokeColor="@color/abcall_primary_color"
            app:strokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_detail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:maxLines="5"
                android:gravity="top|left"
                android:inputType="textMultiLine|textNoSuggestions"
                style="@style/customIncidenceInputTextAppearance"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_load_files"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/customLoadFilesButton"
            app:cornerRadius="10sp"
            android:layout_marginTop="16dp"
            android:gravity="left|center_vertical"
            android:text="@string/Attach_documents"
            app:strokeColor="@color/abcall_primary_color"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/baseline_attach_file_24"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/Registry"
            style="@style/customPrimaryButton"
            app:cornerRadius="20sp" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/customClearCancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/cancel"
                app:strokeColor="@color/abcall_primary_color"
                app:strokeWidth="2dp"
                app:cornerRadius="20sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>