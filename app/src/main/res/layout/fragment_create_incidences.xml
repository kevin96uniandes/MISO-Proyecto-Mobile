<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.fragments.CreateIncidencesFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_incidence_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:endIconTint="@color/abcall_third_one"
            android:layout_marginTop="16dp"
            android:hint="Seleccione el tipo de incidencia..."
            style="@style/customIncidenceInputText"
            android:clickable="true"
            app:placeholderTextAppearance="@style/customLoginHintTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_incidence_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text|textNoSuggestions"
                style="@style/customIncidenceInputTextAppearance"
                android:focusable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:endIconTint="@color/abcall_third_one"
            android:layout_marginTop="16dp"
            android:hint="@string/asunto"
            style="@style/customIncidenceInputText"
            app:placeholderTextAppearance="@style/customLoginHintTextAppearance"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text|textNoSuggestions"
                style="@style/customIncidenceInputTextAppearance"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_detail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:endIconMode="clear_text"
            android:layout_marginTop="16dp"
            app:endIconTint="@color/abcall_third_one"
            android:hint="@string/comentarios"

            style="@style/customIncidenceInputText"
            app:placeholderTextAppearance="@style/customLoginHintTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_detail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:maxLines="1"
                android:gravity="top|left"
                android:inputType="text|textNoSuggestions"
                style="@style/customIncidenceInputTextAppearance"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_load_files"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/customLoadFilesButton"
            app:cornerRadius="10sp"
            android:layout_marginTop="16dp"
            android:gravity="left|center_vertical"
            android:text="Adjuntar documentos"
            app:strokeColor="@color/abcall_primary_color"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/baseline_attach_file_24"
            />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/customClearCancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:text="@string/cancelar"
                app:strokeColor="@color/abcall_primary_color"
                app:strokeWidth="2dp"
app:cornerRadius="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/registar"
            style="@style/customPrimaryButton"
            app:cornerRadius="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>