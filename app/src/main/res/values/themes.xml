<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ABCAll" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/abcall_third_one</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/abcall_third_one</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/customLoginInputText</item>
    </style>

    <style name="Theme.ABCAll.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/abcall_toolbar_text_color</item>

    </style>

    <style name="customLoginHintTextAppearance">
        <item name="android:textColorHint">@color/abcall_third_one</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="customLoginInputTextAppearance">
        <item name="android:textColor">@color/abcall_third_one</item>
    </style>

    <style name="customLoginInputText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/abcall_white</item>
        <item name="textFillColor">@color/abcall_third_one</item>
        <item name="android:textColorHint">@color/abcall_third_one</item>
    </style>

    <style name="customPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/abcall_primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/abcall_white</item>
    </style>

    <style name="customLoadFilesButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/abcall_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/abcall_primary_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="customLoadIncidenceTypeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/abcall_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/abcall_primary_color</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="customClearCancelButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/abcall_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/abcall_primary_color</item>
    </style>

    <style name="customSecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/abcall_third_one</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/abcall_white</item>
    </style>


    <style name="Theme.ABCAll.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ABCAll.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>